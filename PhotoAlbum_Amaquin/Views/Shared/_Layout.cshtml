<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhotoAlbum_Amaquin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhotoAlbum_Amaquin.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navigation-bar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-main-color box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand hover-color-red" asp-area="" asp-controller="Home" asp-action="Index">PhotoAlbum_Amaquin</a>
                <button class="navbar-toggler color-red" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link navigation-link" asp-area="" asp-controller="Home" asp-action="Heroes">Heroes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navigation-link" asp-area="" asp-controller="Home" asp-action="Items">Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navigation-link" asp-area="" asp-controller="Home" asp-action="Neutrals">Neutrals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navigation-link" asp-area="" asp-controller="Home" asp-action="Players">Players</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navigation-link" asp-area="" asp-controller="Home" asp-action="Cosmetics">Cosmetics</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="pb-3">
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2024 - PhotoAlbum_Amaquin
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
